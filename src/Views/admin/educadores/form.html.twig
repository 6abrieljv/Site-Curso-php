{% extends "templates/admin/base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <main class="flex-1 p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">{{ title }}</h2>

        {# Mensagens Flash #}
        {% if flash %}
            <div class="p-3 mb-4 text-sm {% if 'Erro' in flash %}bg-red-100 text-red-700{% else %}bg-green-100 text-green-700{% endif %} rounded-lg" role="alert">
                {{ flash }}
            </div>
        {% endif %}

        <div class="bg-white shadow-md rounded-lg p-6 max-w-2xl mx-auto">
            <form action="{{ action }}" method="POST" enctype="multipart/form-data">
                {# Campo oculto para ID do usuário (apenas para edição) #}
                {% if educador.usuario.id %}
                    <input type="hidden" name="id" value="{{ educador.usuario.id }}">
                {% endif %}

                <div class="mb-4">
                    <label for="username" class="block text-sm font-medium text-gray-700">Nome de Usuário (login)</label>
                    <input type="text" name="username" id="username" value="{{ educador.usuario.username }}" required
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">E-mail</label>
                    <input type="email" name="email" id="email" value="{{ educador.usuario.email }}" required
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div class="mb-4">
                    <label for="senha" class="block text-sm font-medium text-gray-700">Senha {% if educador.usuario.id %}(deixe em branco para não alterar){% endif %}</label>
                    <input type="password" name="senha" id="senha" {% if not educador.usuario.id %}required{% endif %}
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div class="mb-4">
                    <label for="nome_completo" class="block text-sm font-medium text-gray-700">Nome Completo</label>
                    <input type="text" name="nome_completo" id="nome_completo" value="{{ educador.perfil.nome }}" required
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div class="mb-4">
                    <label for="sobrenome" class="block text-sm font-medium text-gray-700">Sobrenome (opcional)</label>
                    <input type="text" name="sobrenome" id="sobrenome" value="{{ educador.perfil.sobrenome }}"
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div class="mb-4">
                    <label for="cargo" class="block text-sm font-medium text-gray-700">Cargo</label>
                    <input type="text" name="cargo" id="cargo" value="{{ educador.perfil.cargo }}" required
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div class="mb-4">
                    <label for="bio" class="block text-sm font-medium text-gray-700">Biografia (opcional)</label>
                    <textarea name="bio" id="bio" rows="4"
                              class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">{{ educador.perfil.bio }}</textarea>
                </div>

                <div class="mb-4">
                    <label for="foto" class="block text-sm font-medium text-gray-700">Foto do Educador (opcional)</label>
                    <input type="file" name="imagem" id="foto" accept="image/*"
                           class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200 cursor-pointer">
                    {% if educador.perfil.foto %}
                        <div class="mt-2 flex items-center gap-2">
                            <p class="text-sm text-gray-600">Imagem atual:</p>
                            <img src="{{ base_url }}/public/{{ educador.perfil.foto }}" alt="Foto atual" class="w-20 h-20 object-cover rounded-md border border-gray-300 shadow-sm">
                            <label class="text-sm text-gray-700 ml-4">
                                <input type="checkbox" name="remove_current_image" value="1"> Remover imagem atual
                            </label>
                        </div>
                    {% endif %}
                </div>

                <div class="mb-4">
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="is_admin" value="1" class="form-checkbox h-5 w-5 text-blue-600" {% if educador.usuario.isAdmin %}checked{% endif %}>
                        <span class="ml-2 text-gray-700">Tornar Admin?</span>
                    </label>
                </div>

                <div class="mt-6 flex justify-end">
                    <a href="{{ base_url }}/admin/educadores" class="mr-3 px-4 py-2 bg-gray-200 text-gray-800 text-base font-medium rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-300">
                        Cancelar
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white text-base font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300">
                        {{ button_label }}
                    </button>
                </div>
            </form>
        </div>
    </main>
{% endblock %}